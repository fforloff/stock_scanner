<p id="notice"><%= notice %></p>

<h1>Listing Indices</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Name</th>
      <th>Exchange</th>
      <th>Roar</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @indices.each do |index| %>
      <tr>
        <td><%= index.ticker %></td>
        <td><%= index.name %></td>
        <td><%= index.exchange %></td>
        <td><%= index.roar %></td>
        <td><%= index._id %></td>
        <td><%= link_to 'Show', index %></td>
        <td><%= link_to 'Edit', edit_index_path(index) %></td>
        <td><%= link_to 'Destroy', index, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

